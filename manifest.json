{
	"manifest_version": 2,
	
	"name": "leCrypt",
	"description": "A secure and decentralised password manager",
	"version": "1.0.0",
	
	"icons": {
		"16": "icons/icon16.png",
		"19": "icons/icon19.png",
		"32": "icons/icon32.png",
		"38": "icons/icon38.png",
		"48": "icons/icon48.png",
		"64": "icons/icon64.png",
		"128": "icons/icon128.png"
	},
	
	"permissions": ["activeTab", "idle", "storage", "tabs", "<all_urls>", "identity"],
	
	"background": {
		"scripts": ["js/jquery.js", "js/crypto-js.min.js", "js/background.js"],
		"persistent": true
	},

	"oauth2": {
		"client_id": "yourClientIDHere.apps.googleusercontent.com",
		"scopes": ["https://www.googleapis.com/auth/drive.appdata", "https://www.googleapis.com/auth/drive.file"]
	},

  	"content_scripts": [{
      	"matches": [
        	"<all_urls>"
      	],
      	"js": [
        	"js/autofill.js"
      	]
	}],	
	
	"commands": {
    	"_execute_browser_action": {
    		"suggested_key": {
        		"windows": "Alt+Shift+X",
        		"mac": "Alt+Shift+X",
        		"chromeos": "Alt+Shift+X",
        		"linux": "Alt+Shift+X"
      		}
    	}
	},
	  
	"browser_action": {
		"default_icon": "icons/icon32.png",
		"default_title": "Secpass",
		"default_popup": "popup.html"
	},

	"web_accessible_resources": [
    	"js/autofill.js"
  	]
}
